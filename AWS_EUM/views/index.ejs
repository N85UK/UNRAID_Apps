<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AWS End User Messaging</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>AWS End User Messaging</h1>
            <p>Send SMS messages using AWS Pinpoint</p>
        </header>

        <main>
            <section class="sms-form">
                <h2>Send SMS</h2>
                <form id="smsForm">
                    <div class="form-group">
                        <label for="originator">Originator:</label>
                        <select id="originator" name="originator" required>
                            <option value="">Select originator...</option>
                            <% Object.keys(originators).forEach(label => { %>
                                <option value="<%= label %>"><%= label %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="phoneNumber">Phone Number:</label>
                        <input type="tel" id="phoneNumber" name="phoneNumber"
                               placeholder="+447700900000" required>
                    </div>

                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea id="message" name="message" rows="4"
                                  placeholder="Enter your message..." required
                                  maxlength="160"></textarea>
                        <small id="charCount">0/160 characters</small>
                    </div>

                    <button type="submit" id="sendBtn">Send SMS</button>
                </form>
            </section>

            <section class="message-history">
                <h2>Message History</h2>
                <div id="history">
                    <% if (history.length === 0) { %>
                        <p class="no-history">No messages sent yet.</p>
                    <% } else { %>
                        <% history.forEach(msg => { %>
                            <div class="history-item">
                                <div class="history-header">
                                    <span class="timestamp"><%= new Date(msg.timestamp).toLocaleString() %></span>
                                    <span class="originator"><%= msg.originator %></span>
                                </div>
                                <div class="phone-number"><%= msg.phoneNumber %></div>
                                <div class="message-body"><%= msg.message %></div>
                                <% if (msg.messageId) { %>
                                    <div class="message-id">ID: <%= msg.messageId %></div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </section>
        </main>
    </div>

    <script src="/js/app.js"></script>
</body>
</html>