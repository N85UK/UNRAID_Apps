{
  "service": "filebrowser",
  "enabled": true,
  "port": 8080,
  "binary": "/usr/local/emhttp/plugins/unraid-api/filemanager/filebrowser",
  "database": "/boot/config/plugins/unraid-api/filebrowser.db",
  "config": "/boot/config/plugins/unraid-api/filemanager.json",
  "auth": {
    "method": "proxy",
    "header": "X-Unraid-User",
    "roleHeader": "X-Unraid-Roles",
    "permissionHeader": "X-Unraid-Permissions"
  },
  "proxy": {
    "enabled": true,
    "baseUrl": "/filemanager",
    "timeout": 30000,
    "retries": 3
  },
  "security": {
    "corsEnabled": true,
    "allowedOrigins": ["*"],
    "rateLimit": {
      "enabled": true,
      "max": 100,
      "windowMs": 60000
    }
  },
  "roots": [
    {
      "name": "User Shares",
      "path": "/mnt/user",
      "writable": true,
      "description": "All UNRAID user shares"
    },
    {
      "name": "Cache Drive",
      "path": "/mnt/cache",
      "writable": true,
      "description": "Files stored on cache drive"
    },
    {
      "name": "Array Disks",
      "path": "/mnt/disk*",
      "writable": true,
      "description": "Individual disk access",
      "pattern": true
    },
    {
      "name": "Docker Appdata",
      "path": "/mnt/user/appdata",
      "writable": true,
      "description": "Docker container configurations"
    },
    {
      "name": "System",
      "path": "/mnt/disks",
      "writable": false,
      "description": "System disk access",
      "adminOnly": true
    },
    {
      "name": "Boot Drive",
      "path": "/boot",
      "writable": false,
      "description": "UNRAID boot drive",
      "adminOnly": true
    }
  ],
  "features": {
    "upload": true,
    "download": true,
    "archive": true,
    "search": true,
    "preview": true,
    "thumbnails": true,
    "sharing": true,
    "versioning": false,
    "trash": true
  },
  "limits": {
    "maxFileSize": "10GB",
    "maxUploadFiles": 100,
    "maxDirectoryDepth": 20,
    "maxSearchResults": 1000
  },
  "ui": {
    "theme": "auto",
    "locale": "en",
    "branding": {
      "name": "UNRAID File Manager",
      "logo": "/static/unraid-logo.png",
      "disableExternal": true
    },
    "viewMode": "list",
    "showHidden": false,
    "sortBy": "name",
    "sortOrder": "asc"
  },
  "commands": [
    {
      "name": "Archive",
      "cmd": "tar -czf {{.Output}} {{.Input}}",
      "args": ["tar", "-czf"],
      "extensions": ["*"]
    },
    {
      "name": "Extract",
      "cmd": "tar -xzf {{.Input}} -C {{.Dir}}",
      "args": ["tar", "-xzf"],
      "extensions": [".tar.gz", ".tgz"]
    }
  ],
  "logging": {
    "level": "info",
    "file": "/var/log/unraid-api/filemanager.log",
    "maxSize": "100MB",
    "maxFiles": 10,
    "compress": true
  }
}