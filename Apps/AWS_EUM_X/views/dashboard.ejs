<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>AWS EUM X — Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <div class="header">
        <img src="/icons/icon.svg" alt="AWS EUM X" width="48" height="48">
        <h1>AWS EUM X — Dashboard</h1>
      </div>

      <p>Version: <%= version %> — <a href="/">First-run</a></p>

      <section id="send">
        <h2>Send SMS Message</h2>
        <form id="send-form">
          <label for="send-phone">Phone Number (E.164 format)</label>
          <input id="send-phone" type="tel" placeholder="+447700900000" required />
          
          <label for="send-origin">Origination Number (optional)</label>
          <input id="send-origin" type="tel" placeholder="+1234567890 or leave empty" />
          
          <label for="send-message">Message</label>
          <textarea id="send-message" rows="4" placeholder="Your SMS message..." required></textarea>
          
          <div class="character-count">
            <span id="char-count">0 characters • 0 parts (GSM-7)</span>
          </div>
          
          <button type="submit" class="btn-primary">Send SMS</button>
        </form>
        <div id="send-status" role="status" aria-live="polite"></div>
      </section>

      <section id="health">
        <h2>System</h2>
        <div id="tiles" class="tiles">
          <div class="tile"><strong>Ready</strong><div id="ready-status">Loading…</div></div>
          <div class="tile"><strong>AWS</strong><div id="aws-probe">Loading…</div></div>
          <div class="tile"><strong>Queue depth</strong><div id="queue-depth">Loading…</div></div>
        </div>
      </section>

      <section id="mps">
        <h2>Per-origin MPS overrides</h2>
        <div id="mps-list">Loading…</div>
        <form id="mps-form">
          <label>Origin</label>
          <input id="mps-origin" placeholder="e.g. +1234567890 or default" />
          <label>MPS</label>
          <input id="mps-value" type="number" step="0.1" value="1.0" />
          <button type="submit">Save override</button>
        </form>
        <div id="mps-status" role="status" aria-live="polite"></div>
      </section>

      <section id="queue">
        <h2>Queued messages</h2>
        <table id="queue-table">
          <thead><tr><th>ID</th><th>Origin</th><th>Phone</th><th>Attempts</th><th>Next Attempt</th><th>Created</th><th>Action</th></tr></thead>
          <tbody></tbody>
        </table>
      </section>
    </div>
    <script src="/js/dashboard.js"></script>
  </body>
  </html>
