# AWS End User Messaging v2.0 - Environment Configuration
# Copy this file to .env and configure your settings

# =================================
# AWS CONFIGURATION (REQUIRED)
# =================================

# Your AWS credentials (required)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# AWS region where your SMS resources are located
AWS_REGION=eu-west-2

# =================================
# APPLICATION SETTINGS (OPTIONAL)
# =================================

# Application port (internal container port)
PORT=80

# Rate limiting - messages per minute per IP
RATE_LIMIT_MESSAGES=10

# Maximum message length in characters
MAX_MESSAGE_LENGTH=1600

# Number of messages to keep in history
HISTORY_RETENTION=100

# Enable debug logging for troubleshooting
ENABLE_DEBUG=false

# =================================
# MANUAL ORIGINATORS (OPTIONAL)
# =================================

# Manual originator configuration (optional - app auto-fetches from AWS)
# Format: Label1:arn1,Label2:arn2
# Example: MyNumber:arn:aws:sms-voice:eu-west-2:123456789012:phone-number/+447700900000
ORIGINATORS=

# =================================
# DEVELOPMENT SETTINGS
# =================================

# For development only - not used in production
NODE_ENV=development