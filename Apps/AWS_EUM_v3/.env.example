# AWS End User Messaging v3.0 Configuration
# Copy this file to .env and adjust the values according to your setup

# Server Configuration
PORT=80
NODE_ENV=production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# SMS Configuration  
SENDER_ID=YourApp
MAX_MESSAGE_LENGTH=160

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# UI Features
UI_DARK_MODE=true
UI_ANIMATIONS=true
UI_CHARTS=true
UI_REAL_TIME=true

# Auto Update
AUTO_UPDATE_CHECK=true
UPDATE_CHECK_INTERVAL=24
AUTO_UPDATE_APPLY=false

# Security
HELMET_ENABLED=true
CORS_ENABLED=true

# History & Cache
HISTORY_RETENTION=100
CACHE_TTL=300