# AWS End User Messaging v3.0 Configuration
# Copy this file to .env and adjust the values according to your setup

# Server Configuration
PORT=80
NODE_ENV=production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# SMS Configuration  
SENDER_ID=YourApp
MAX_MESSAGE_LENGTH=160

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# UI Features
UI_DARK_MODE=true
UI_ANIMATIONS=true
UI_CHARTS=true
UI_REAL_TIME=true

# Auto Update
AUTO_UPDATE_CHECK=true
UPDATE_CHECK_INTERVAL=24
AUTO_UPDATE_APPLY=false

# Security
HELMET_ENABLED=true
CORS_ENABLED=true

# Content Security Policy (CSP) Configuration
# DISABLE_CSP - Set to 'true' to completely disable CSP headers (allows all external resources)
# Recommended for custom bridge networks where external CDNs are needed
DISABLE_CSP=false

# NETWORK_HOST - Specify your network's host/IP for CSP whitelist
# Use this when running on custom bridge networks like br0.2
NETWORK_HOST=http://10.0.2.11

# CSP_POLICY - Advanced: Provide custom CSP policy as JSON
# Example for permissive policy allowing external CDNs:
# CSP_POLICY={"defaultSrc":["'self'","'unsafe-inline'","'unsafe-eval'","data:","http:","https:"],"styleSrc":["'self'","'unsafe-inline'","http:","https:","cdnjs.cloudflare.com","cdn.jsdelivr.net"],"scriptSrc":["'self'","'unsafe-inline'","'unsafe-eval'","http:","https:","cdnjs.cloudflare.com","cdn.jsdelivr.net"]}
# CSP_POLICY=

# History & Cache
HISTORY_RETENTION=100
CACHE_TTL=300