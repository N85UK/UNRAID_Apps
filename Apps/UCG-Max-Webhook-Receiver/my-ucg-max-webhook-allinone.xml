<?xml version="1.0"?>
<Container version="2">
  <Name>UCG-Max-Webhook-Allinone</Name>
  <Repository>ghcr.io/n85uk/ucg-max-webhook-receiver:allinone-latest</Repository>
  <Registry>https://ghcr.io</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/N85UK/UNRAID_Apps/issues</Support>
  <Project>https://github.com/N85UK/UNRAID_Apps/tree/main/Apps/UCG-Max-Webhook-Receiver</Project>
  <Overview>UCG Max Webhook Receiver - All-in-One Edition with embedded PostgreSQL. Production-ready webhook receiver for UCG Max devices with built-in database. Single container, no external dependencies required.</Overview>
  <Category>Tools:Network Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/N85UK/UNRAID_Apps/main/Apps/UCG-Max-Webhook-Receiver/my-ucg-max-webhook-allinone.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/N85UK/UNRAID_Apps/main/Apps/UCG-Max-Webhook-Receiver/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="Web UI Port" Target="8000" Default="8000" Mode="tcp" Description="Port for accessing the web interface" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
  <Config Name="Data Directory" Target="/var/lib/postgresql/data" Default="/mnt/user/appdata/ucg-max-webhook/data" Mode="rw" Description="PostgreSQL database storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/ucg-max-webhook/data</Config>
  <Config Name="Secret Key" Target="SECRET_KEY" Default="" Mode="" Description="Secret key for JWT token generation (use: openssl rand -hex 32)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="HMAC Secret" Target="HMAC_SECRET" Default="" Mode="" Description="HMAC secret for webhook verification (use: openssl rand -hex 32)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Bearer Token" Target="BEARER_TOKEN" Default="" Mode="" Description="Optional bearer token for webhook authentication" Type="Variable" Display="normal" Required="false" Mask="true"></Config>
  <Config Name="Admin Username" Target="ADMIN_USER" Default="admin" Mode="" Description="Admin dashboard username" Type="Variable" Display="always" Required="true" Mask="false">admin</Config>
  <Config Name="Admin Password" Target="ADMIN_PASSWORD" Default="" Mode="" Description="Admin dashboard password" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Database Password" Target="DB_PASSWORD" Default="changeme" Mode="" Description="PostgreSQL database password (internal use)" Type="Variable" Display="advanced" Required="false" Mask="true">changeme</Config>
  <Config Name="Alert Retention Days" Target="ALERT_RETENTION_DAYS" Default="30" Mode="" Description="Number of days to retain alert data" Type="Variable" Display="advanced" Required="false" Mask="false">30</Config>
  <Config Name="Rate Limit Requests" Target="RATE_LIMIT_REQUESTS" Default="100" Mode="" Description="Maximum requests per window" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="Rate Limit Window" Target="RATE_LIMIT_WINDOW" Default="60" Mode="" Description="Rate limit window in seconds" Type="Variable" Display="advanced" Required="false" Mask="false">60</Config>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="INFO" Mode="" Description="Logging level (DEBUG, INFO, WARNING, ERROR)" Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>
</Container>
