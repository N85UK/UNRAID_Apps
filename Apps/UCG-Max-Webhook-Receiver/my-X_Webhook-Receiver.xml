<?xml version="1.0"?>
<Container version="2">
  <Name>X_Webhook-Receiver</Name>
  <Repository>ghcr.io/n85uk/ucg-max-webhook-receiver:latest</Repository>
  <Registry>https://ghcr.io</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/N85UK/UNRAID_Apps/issues</Support>
  <Project>https://github.com/N85UK/UNRAID_Apps</Project>
  <Overview>X_Webhook-Receiver v1.0.0 - Universal webhook receiver and alert management system. Receives, stores, and displays alerts from any webhook source (UCG Max, Uptime Robot, GitHub, Prometheus, etc.) with a modern gradient UI. Supports external MariaDB/MySQL or PostgreSQL databases. Features intelligent field mapping for any JSON payload.</Overview>
  <Category>Tools: Network:Management Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/N85UK/UNRAID_Apps/main/Apps/UCG-Max-Webhook-Receiver/my-X_Webhook-Receiver.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/N85UK/UNRAID_Apps/main/Apps/UCG-Max-Webhook-Receiver/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText>If you find this useful, consider supporting development</DonateText>
  <DonateLink>https://github.com/sponsors/N85UK</DonateLink>
  <Requires/>
  <Config Name="Web UI Port" Target="8000" Default="8000" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
  <Config Name="Database Type" Target="DB_TYPE" Default="mariadb" Mode="" Description="Database type: mariadb, mysql, or postgresql" Type="Variable" Display="always" Required="true" Mask="false">mariadb</Config>
  <Config Name="Database Host" Target="DB_HOST" Default="" Mode="" Description="Database server hostname or IP address" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Database Port" Target="DB_PORT" Default="3306" Mode="" Description="Database server port (3306 for MariaDB/MySQL, 5432 for PostgreSQL)" Type="Variable" Display="always" Required="true" Mask="false">3306</Config>
  <Config Name="Database Name" Target="DB_NAME" Default="ucg_webhook_db" Mode="" Description="Database name" Type="Variable" Display="always" Required="true" Mask="false">ucg_webhook_db</Config>
  <Config Name="Database User" Target="DB_USER" Default="ucg_webhook" Mode="" Description="Database username" Type="Variable" Display="always" Required="true" Mask="false">ucg_webhook</Config>
  <Config Name="Database Password" Target="DB_PASSWORD" Default="" Mode="" Description="Database password" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Secret Key" Target="SECRET_KEY" Default="" Mode="" Description="JWT secret key for authentication (generate with: openssl rand -hex 32)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="HMAC Secret" Target="HMAC_SECRET" Default="" Mode="" Description="Shared secret for webhook HMAC verification (generate with: openssl rand -hex 32)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Bearer Token" Target="BEARER_TOKEN" Default="" Mode="" Description="Alternative Bearer token for webhook authentication (optional, generate with: openssl rand -hex 32)" Type="Variable" Display="always" Required="false" Mask="true"></Config>
  <Config Name="Admin Username" Target="ADMIN_USER" Default="admin" Mode="" Description="Admin login username" Type="Variable" Display="always" Required="true" Mask="false">admin</Config>
  <Config Name="Admin Password" Target="ADMIN_PASSWORD" Default="" Mode="" Description="Admin login password (set a strong password)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Alert Retention Days" Target="ALERT_RETENTION_DAYS" Default="30" Mode="" Description="Number of days to keep alerts before automatic deletion" Type="Variable" Display="advanced" Required="false" Mask="false">30</Config>
  <Config Name="Rate Limit Requests" Target="RATE_LIMIT_REQUESTS" Default="100" Mode="" Description="Maximum requests per window" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="Rate Limit Window" Target="RATE_LIMIT_WINDOW" Default="60" Mode="" Description="Rate limit window in seconds" Type="Variable" Display="advanced" Required="false" Mask="false">60</Config>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="INFO" Mode="" Description="Logging level (DEBUG, INFO, WARNING, ERROR)" Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>
  <Config Name="Application Data" Target="/app/data" Default="/mnt/user/appdata/ucg-max-webhook" Mode="rw" Description="Application data directory" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/ucg-max-webhook</Config>
</Container>
