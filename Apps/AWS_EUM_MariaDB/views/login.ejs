<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Login - AWS EUM MariaDB</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .login-container { max-width: 420px; margin: 6rem auto; background: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0 8px 30px rgba(0,0,0,0.06);} 
    .form-group { margin-bottom: 1rem; }
    label { display:block; margin-bottom: .5rem; }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Sign in</h2>
    <form id="loginForm">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" required>
      </div>
      <div class="form-group">
        <button type="submit">Sign in</button>
      </div>
      <div id="message" style="color: red; display:none;"></div>
    </form>
    <p style="margin-top:1rem; font-size:.9rem; color:#666;">Default administrative credentials: admin / admin123 (change after first login)</p>
  </div>

  <script>
    const form = document.getElementById('loginForm');
    const message = document.getElementById('message');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      try {
        const r = await fetch('/api/auth/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username, password })
        });
        const json = await r.json();
        if (r.ok) {
          window.location = '/';
        } else {
          message.innerText = json.error || 'Login failed';
          message.style.display = 'block';
        }
      } catch (err) {
        message.innerText = 'Network error';
        message.style.display = 'block';
      }
    });
  </script>
</body>
</html>