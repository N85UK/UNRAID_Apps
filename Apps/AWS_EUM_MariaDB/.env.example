# AWS End User Messaging MariaDB Edition Configuration
# Copy this file to .env and adjust the values according to your setup

# Server Configuration
PORT=80
NODE_ENV=production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# SMS Configuration  
SENDER_ID=YourApp
MAX_MESSAGE_LENGTH=160

# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_USER=aws_eum
DB_PASSWORD=your_secure_password
DB_NAME=aws_eum
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# Authentication
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters
SESSION_SECRET=your_very_secure_session_secret
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Auto Update
AUTO_UPDATE_CHECK=true
UPDATE_CHECK_INTERVAL=24
AUTO_UPDATE_APPLY=false

# Security
HELMET_ENABLED=true
CORS_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=30

# Background Jobs
CLEANUP_INTERVAL=24
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7