<!-- Cleanup previous installation -->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
echo "================================================="
echo "ExplorerX Plugin Installation (EMERGENCY DIAGNOSTIC)"
echo "Version: &version;"
echo "================================================="

# EMERGENCY DIAGNOSTICS - Check current plugin system state
echo "ðŸ” EMERGENCY DIAGNOSTICS:"
echo "Current plugin directory contents:"
ls -la /usr/local/emhttp/plugins/ 2>/dev/null || echo "âŒ Plugin directory not accessible"

echo ""
echo "Plugin configuration directory:"
ls -la /boot/config/plugins/ 2>/dev/null || echo "âŒ Plugin config directory not accessible"

echo ""
echo "Checking for other plugin files:"
find /usr/local/emhttp/plugins/ -name "*.plg" 2>/dev/null | head -10 || echo "No .plg files found"

echo ""
echo "Current nginx status:"
nginx_status=$(/etc/rc.d/rc.nginx status 2>&1)
echo "Nginx: $nginx_status"

# SAFE removal of only our plugin - DO NOT touch other plugins
echo ""
echo "ðŸ›¡ï¸ SAFE CLEANUP (ExplorerX only):"
if [ -d /usr/local/emhttp/plugins/&name; ]; then
  echo "Removing only ExplorerX plugin directory..."
  rm -rf /usr/local/emhttp/plugins/&name;
  echo "âœ… ExplorerX directory removed"
else
  echo "â„¹ï¸ ExplorerX directory not found (expected)"
fi

# Clean only our specific cache/log files
rm -rf /tmp/plugins/&name; 2>/dev/null || true
rm -rf /var/log/plugins/&name; 2>/dev/null || true

# Clean only our downloads, preserve others
if [ -d /boot/config/plugins/&name; ]; then
  echo "Cleaning ExplorerX downloads only..."
  find /boot/config/plugins/&name; -name "explorerx-*.txz" -type f -delete 2>/dev/null || true
fi

echo "âœ… Safe cleanup completed - other plugins preserved"
echo ""
]]>
</INLINE>
</FILE>

