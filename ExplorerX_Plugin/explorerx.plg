<!-- Extract and install plugin -->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
echo "================================================="
echo "Installing ExplorerX Plugin (EMERGENCY RECOVERY)"
echo "================================================="

# Check plugin system health BEFORE installation
echo "ðŸ” PRE-INSTALLATION DIAGNOSTICS:"
echo "Plugin directory contents before installation:"
ls -la /usr/local/emhttp/plugins/ | head -20

echo ""
echo "Available plugin pages:"
find /usr/local/emhttp/plugins/ -name "*.page" 2>/dev/null | head -10 || echo "No .page files found"

# Extract plugin package with minimal impact
cd /usr/local/emhttp/plugins
echo ""
echo "ðŸ“¦ EXTRACTING PLUGIN PACKAGE:"
if ! tar -xf /boot/config/plugins/&name;/&name;-&version;.txz; then
  echo "âŒ ERROR: Failed to extract plugin package"
  echo "ðŸ”„ Checking if nginx needs restart..."
  if ! pgrep nginx > /dev/null; then
    echo "Starting nginx..."
    /etc/rc.d/rc.nginx start 2>&1
  fi
  exit 1
fi

# Verify extraction
if [ ! -d /usr/local/emhttp/plugins/&name; ]; then
  echo "âŒ ERROR: Plugin directory not found after extraction"
  echo "Available directories:"
  ls -la /usr/local/emhttp/plugins/ | head -10
  exit 1
fi

# Set permissions
echo "ðŸ”§ SETTING PERMISSIONS:"
chmod -R 755 /usr/local/emhttp/plugins/&name; 2>&1
chown -R root:root /usr/local/emhttp/plugins/&name; 2>&1

# Minimal file verification (skip PHP syntax test for now)
echo "ðŸ“‹ BASIC FILE VERIFICATION:"
PLUGIN_DIR="/usr/local/emhttp/plugins/&name;"
if [ -f "$PLUGIN_DIR/explorerx.page" ]; then
  echo "âœ… Page file found"
else
  echo "âŒ Page file missing"
  exit 1
fi

if [ -f "$PLUGIN_DIR/include/api.php" ]; then
  echo "âœ… API file found"
else
  echo "âŒ API file missing"
  exit 1
fi

# Check plugin system status AFTER installation
echo ""
echo "ðŸ” POST-INSTALLATION DIAGNOSTICS:"
echo "Plugin directory contents after installation:"
ls -la /usr/local/emhttp/plugins/ | head -20

echo ""
echo "All plugin pages now available:"
find /usr/local/emhttp/plugins/ -name "*.page" 2>/dev/null | wc -l | xargs echo "Plugin pages found:"

# Ensure services are running
echo ""
echo "ðŸ”„ SERVICE STATUS CHECK:"
if ! pgrep nginx > /dev/null; then
  echo "Starting nginx..."
  /etc/rc.d/rc.nginx start 2>&1
else
  echo "âœ… Nginx is running"
fi

echo ""
echo "================================================="
echo "âœ… ExplorerX Plugin Installation Completed!"
echo "================================================="
echo ""
echo "ðŸ” TROUBLESHOOTING INFO:"
