echo "2. Check: Settings â†’ Plugin File Access"
echo "3. Restart nginx: /etc/rc.d/rc.nginx restart"
echo "4. Check nginx logs: /var/log/nginx/error.log"
echo ""
echo "ðŸ“§ For support: &support;"
echo "================================================="
]]>
</INLINE>
